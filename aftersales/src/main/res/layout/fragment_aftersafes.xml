<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_centerVertical="true"
            android:padding="14dp"
            app:srcCompat="@drawable/ic_arrow_left_gray_24dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="申请退款"
            android:textColor="@color/base_black"
            android:textSize="@dimen/H1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/default_white" />

    <include layout="@layout/item_linear_goods"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="退款原因："
            android:textColor="@color/base_black"
            android:textSize="@dimen/H3" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请详细描述相关原因"
            android:textColor="@color/base_black"
            android:textColorHint="@color/default_gray"
            android:textSize="@dimen/H3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="退款金额："
            android:textColor="@color/base_black"
            android:textSize="@dimen/H3" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_backprice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/default_white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/default_text"
        android:textSize="@dimen/H5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="退款说明："
            android:textColor="@color/base_black"
            android:textSize="@dimen/H3" />

        <EditText
            android:id="@+id/et_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请详细描述相关说明"
            android:textColor="@color/base_black"
            android:textColorHint="@color/default_gray"
            android:textSize="@dimen/H3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/default_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:text="上传凭证"
        android:textColor="@color/base_black"
        android:textSize="@dimen/H3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>